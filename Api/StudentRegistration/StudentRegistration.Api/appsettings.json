{

  "AllowedHosts": "*",
  "Serilog": {
    "Using": [],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
        
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId" ],
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "G:\\Jobs or works\\S3Innovate\\StudentRegistration\\Api\\Logs\\log.txt",
          "outputTemplate": "{Timestamp:G} {Message}{NewLine:1}{Exception:1}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "G:\\Jobs or works\\S3Innovate\\StudentRegistration\\Api\\Logs\\log.json",
          "formatter":  "Serilog.Formatting.Json.JsonFormatter, Serilog"

        }
      }
    ]
  }
}
